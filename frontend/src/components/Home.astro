<main class="flex justify-center">
    <section class="w-full flex flex-col mt-24 items-center space-y-2 md:space-y-16 md:px-86">
      <div class="w-full flex flex-col justify-center items-center space-y-6">
        <h1 class="text-3xl md:text-6xl text-center font-bold text-dark-blue drop-shadow-md">Conocé los nombres de las locaclizaciones del mundo</h1>

        <h2 class="text-2l md:text-3xl text-center text-gray-700 font-semibold text-light-gray-blue drop-shadow-md">Busca la localización que desees</h2>
      </div>
 
      <div class="w-full flex md:flex-row items-center justify-center gap-2">
        <div class="w-full md:w-[35rem] relative pb-[3px] rounded-xl focus-within:gradient-border">
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="w-6 h-6 absolute top-[45%] -translate-y-1/2 left-2.5 md:left-3 z-10" 
            viewBox="0 0 24 24"
          >
            <path
              fill="none" 
              stroke="currentColor" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="1.5" 
              d="m14 14l2.5 2.5m-.067 2.025a1.48 1.48 0 1 1 2.092-2.092l3.042 3.042a1.48 1.48 0 1 1-2.092 2.092zM16 9A7 7 0 1 0 2 9a7 7 0 0 0 14 0" 
            />
          </svg>
          
          <input
            type="text"
            class="w-full py-2 pl-10.5 md:pl-12 pr-4 rounded-xl border border-gray-500 bg-white text-sm md:text-base hover:border-transparent hover:shadow-md focus:shadow-md focus:outline-none duration-300 transition-all"
            placeholder="Buscar paises, provincias, localidades..."
          >
        </div>

        <button class="flex items-center justify-center px-3 md:px-4 py-2.5 text-white font-semibold bg-gradient-to-r from-[#3245ff] to-[#bc52ee] rounded-xl shadow-[inset_0_0_0_1px_rgba(255,255,255,0.12),inset_0_-4px_0_rgba(0,0,0,0.24)] hover:shadow-[inset_0_0_0_1px_rgba(255,255,255,0.12),inset_0_-3px_0_rgba(0,0,0,0.24)] hover:text-gray-200 active:shadow-none transition-all">
          {/* Icon in mobile */}
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 inline md:hidden" viewBox="0 0 24 24">
            <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M21.048 3.053C18.87.707 2.486 6.453 2.5 8.55c.015 2.379 6.398 3.11 8.167 3.607c1.064.299 1.349.604 1.594 1.72c1.111 5.052 1.67 7.566 2.94 7.622c2.027.09 7.972-16.158 5.847-18.447M11.5 12.5L15 9" />
          </svg>

          {/* Text in desktop */}
          <span class="hidden md:inline">Buscar</span>
        </button>
      </div>
    </section>
  </main>


<style>
  .focus-within\:gradient-border:focus-within {
    position: relative;
    border-radius: 0.75rem;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
  }
  .focus-within\:gradient-border:focus-within input {
    border-color: transparent !important;
  }

  @media (max-width: 768px) {
    #container {
      flex-direction: column;
    }
    section {
      padding-left: 1rem;
      padding-right: 1rem;
    }
    h1 {
      line-height: 1.5;
    }
  }
</style>