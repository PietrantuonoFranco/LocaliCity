---
export const prerender = false;

import Layout from "src/components/astro/Layout.astro";
import EditarUsuarioForm from "../../../components/react/usuarios/EditarUsuarioForm";

const { id } = Astro.params;

// Validar que id existe y es un número válido
const userId = id ? parseInt(id) : null;
---

<Layout>
  {userId ? (
    <EditarUsuarioForm id={userId} client:load/>
  ) : (
    <div>Error: ID no válido</div>
  )}
</Layout>